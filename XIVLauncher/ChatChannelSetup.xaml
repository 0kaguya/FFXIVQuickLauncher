<Window x:Class="XIVLauncher.ChatChannelSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XIVLauncher"
        xmlns:xaml="clr-namespace:XIVLauncher.Xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Configure chat channel" Height="241.747" Width="533.495" WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/dalamud_icon.ico" ResizeMode="NoResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            Please enter the chat type and if XL should post to a channel in a server or to an user in DMs,
            <LineBreak/>
            and their respective ID.
        </TextBlock>
        <Label Foreground="DarkGray" Margin="142,20,258,163" Cursor="Hand"
               MouseUp="OpenGuideLabel_OnClick">
            How do I get these?
        </Label>
        <ComboBox Margin="17,46,307,129" SelectedIndex="1" x:Name="ChatTypeComboBox" Foreground="{DynamicResource MaterialDesignBody}" SelectionChanged="ChatTypeComboBox_OnSelectionChanged"/>
        <ComboBox Margin="290,52,34,135" SelectedIndex="0" x:Name="ChannelTypeComboBox" Foreground="{DynamicResource MaterialDesignBody}">
            <ComboBoxItem>Server channel</ComboBoxItem>
            <ComboBoxItem>User</ComboBoxItem>
        </ComboBox>
        <xctk:ColorPicker Name="ColorPicker" SelectedColorChanged="ColorPicker_OnSelectedColorChanged" Margin="50,158,226,30" DisplayColorAndName="True"></xctk:ColorPicker>
        <Label Margin="10,0,0,10" Width="400" VerticalAlignment="Center" HorizontalAlignment="Left">ID</Label>
        <TextBox x:Name="ChannelIdTextBox" Margin="10,0,0,-30" Width="400" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
        <materialDesign:PackIcon Kind="Chat" Margin="17,160,0,0" Height="22" Width="28" x:Name="ChannelColorIcon"/>
        <Button Content="OK" Width="79" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="NextButton_Click"/>
    </Grid>
</Window>
